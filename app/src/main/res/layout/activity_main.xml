<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<LinearLayout
    android:layout_weight="1"
    android:id="@+id/layout_cal"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/equations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="center_vertical"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="70sp"
        />
</LinearLayout>

<LinearLayout
    android:layout_below="@+id/layout_cal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonSin"
            android:text="Sin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
        <Button
            android:id="@+id/buttonCos"
            android:text="Cos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonTan"
            android:text="Tan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonLog"
            android:text="log"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonLN"
            android:text="ln"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonASin"
            android:text="ASin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
        <Button
            android:id="@+id/buttonACos"
            android:text="ACos"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonATan"
            android:text="ATan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonFac"
            android:text="!"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonPW"
            android:text="^"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonCl"
            android:text="C"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonInv"
            android:text="1/x"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonOpen"
            android:text="("
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonClose"
            android:text=")"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonSqrt"
            android:text="√"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button7"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
        <Button
            android:id="@+id/button8"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/button9"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonDiv"
            android:text="/"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonMod"
            android:text="%"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
        <Button
            android:id="@+id/button5"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/button6"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonMul"
            android:text="*"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonE"
            android:text="e"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />
        <Button
            android:id="@+id/button2"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/button3"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonM"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonPI"
            android:text="π"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonBack"
            android:text="←"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/button0"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonPoint"
            android:text="."
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/buttonP"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="16sp"
            android:textColor="#FFF"
            />

        <Button
            android:id="@+id/buttonRes"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="="
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFF"
            />

</LinearLayout>
</LinearLayout>
</RelativeLayout>
